<!doctype html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
  <link href="<%= url('/css/style.css') %>" rel="stylesheet" type="text/css" />
  <meta charset="UTF-8">
  <title>weloveitproblems</title>
</head>
<body>
  <div class="jumbotron">
    <div class="header">
      <div id="logout">
        <% if @user %>
          <form action="/logout" method="post">
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored"type="submit">logga ut</button>
          </form>
      </div>
      <% end %>
    </div>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header
            mdl-layout--fixed-tabs">
      <header class="mdl-layout__header">
        <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
          <a href="#my_tickets" class="mdl-layout__tab is-active">Mina Ärenden</a>
          <a href="#create_ticket" class="mdl-layout__tab">Skapa Ärende</a>
          <a href="#faq" class="mdl-layout__tab">FAQ</a>
        </div>
      </header>
      <main class="mdl-layout__content">
        <section class="mdl-layout__tab-panel is-active" id="my_tickets">
          <div class="page-content">
            <h1>Mina ärenden</h1>
            <% for ticket in @tickets %>
                <div class="ticket">
                  <a href="/my_ticket/:ticket"><h2 class="ticket_header"><%= ticket.title %></h2></a>
                  <p class="ticket_description"><%= ticket.description%></p>
                  <p class="ticket_status"><%= ticket.status %></p>
                </div>
            <% end %>
          </div>
        </section>
        <section class="mdl-layout__tab-panel" id="create_ticket">
          <div class="page-content">
            <h1>Skapa ärende</h1>
            <form>
              <input name="title" type="text" placeholder="Rubrik">
              <input name="description" type="text" placeholder="Beskrivning">
            </form>
          </div>
        </section>
        <section class="mdl-layout__tab-panel" id="faq">
          <div class="page-content">
            <h1>FAQ</h1>
            <% for article in @articles %>
                <div class="article">
                  <h2 class="article_header"><%= article.title %></h2>
                  <p class="article_description"><%= article.description%></p>
                </div>
            <% end %>
          </div>
        </section>
      </main>
    </div>
  </div>
</body>
</html>