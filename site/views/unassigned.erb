<div class="page-content">
  <h2 class="title">Otilldelade Ã¤renden</h2>
  <% for ticket in @tickets %>
      <div class="ticket">
        <div class="question">
          <h3 class="ticket_header"><%= ticket.title %></h3>
          <p class="ticket_description"><%= ticket.description %></p>
        </div>
        <% for comment in ticket.comments %>
            <div class="comment">
              <p class="comment_description"><%= comment.description %></p>
            </div>
        <% end %>
        <form method="post" action="/admin/unassigned">
          <select name="admins" class="admins">
            <% for admin in @admins %>
              <option value="<%= admin.id %>"><%= admin.first_name %></option>
            <% end %>
          </select>
          <button id="assign"class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Tilldela</button>
          <input type="hidden" value="<%= ticket.id %>" name="ticket">
        </form>
      </div>
  <% end %>
</div>

<style>
  #unassigned {
    background-color: #e6e6e6;
  }
</style>